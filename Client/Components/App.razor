    <!-- Ensure Quill JS loads before your custom script -->
    <script src="https://cdn.quilljs.com/1.3.6/quill.min.js"></script>

    <!-- Your custom JS script -->
    <script>
        window.initQuill = () => {
            if (!window.Quill) {
                console.error("Quill is not loaded.");
                return;
            }

            const editor = document.getElementById('quillEditor');
            if (!editor) {
                console.error("quillEditor div not found.");
                return;
            }

            if (!window.quill) {
                window.quill = new Quill('#quillEditor', {
                    theme: 'snow',
                    placeholder: 'Type your event description here...',
                    modules: {
                        toolbar: [
                            [{ 'header': [1, 2, 3, false] }],
                            ['bold', 'italic', 'underline', 'strike'],
                            [{ 'list': 'ordered'}, { 'list': 'bullet' }],
                            ['link'],
                            ['clean']
                        ]
                    }
                });

        const existingHtml = document.getElementById('descriptionHtml')?.value;
        if (existingHtml) {
            window.quill.root.innerHTML = existingHtml;
        }

                window.quill.on('text-change', function () {
                    const html = window.quill.root.innerHTML;
                    const textarea = document.getElementById('descriptionHtml');
                    if (textarea) {
                        textarea.value = html;
                        textarea.dispatchEvent(new Event('input'));
                    } else {
                        console.warn("Hidden textarea not found.");
                    }
                });
            }
        };

        window.getQuillContent = () => {
            if (window.quill) {
                return window.quill.root.innerHTML;
            }
            return '';
        };
    </script>

    <script>
        window.scrollToTop = () => {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        };
    </script>    

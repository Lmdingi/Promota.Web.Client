    <style>
        body {
            font-family: 'Roboto', sans-serif;
        }

        .icon-placeholder {
            width: 120px;
            height: 120px;
            border-radius: 9999px;
            background-color: #e0e0e0;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
        }

            .icon-placeholder::before {
                content: "";
                position: absolute;
                top: 25%;
                left: 25%;
                width: 20px;
                height: 20px;
                border-radius: 50%;
                border: 2px solid #9e9e9e;
            }

            .icon-placeholder::after {
                content: "";
                position: absolute;
                bottom: 25%;
                left: 20%;
                width: 0;
                height: 0;
                border-left: 25px solid transparent;
                border-right: 25px solid transparent;
                border-bottom: 30px solid #9e9e9e;
            }

        .tab-content {
            display: none;
        }

            .tab-content.active {
                display: block;
            }

        .border-check {
            border: 1px solid red;
        }

        .gradient-bg {
            background: linear-gradient(135deg, #f06292 0%, #ef5350 100%);

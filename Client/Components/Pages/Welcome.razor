@page "/welcome"
@layout EmptyLayout
@attribute [Authorize]


<div class="mx-auto flex-grow text-center max-w-4xl py-12 px-4 sm:px-6 lg:px-8">

    <h1 class="text-5xl md:text-6xl font-bold mb-6 leading-tight">
        Welcome to Promota!
    </h1>

    <p class="text-xl md:text-2xl mb-10 max-w-2xl mx-auto">
        <strong>Thanks for signing up!</strong> You're one step closer to discovering and sharing amazing events near you and around the world — from concerts and festivals to conferences and more.
    </p>

    <p class="m-5">
        Please check your email and confirm your account to get started. Your next unforgettable experience is just around the corner!
    </p>

    <div class="flex flex-col sm:flex-row justify-center items-center space-y-4 sm:space-y-0 sm:space-x-6">
        <a class="bg-white text-pink-500 hover:bg-pink-50 font-semibold py-3 px-8 rounded-lg shadow-lg transition-transform duration-300 ease-in-out hover:scale-105 text-lg flex items-center" href="#">
            <span class="material-icons mr-2">search</span> Explore Events
        </a>

        <a class="bg-white text-pink-500 hover:bg-pink-50 font-semibold py-3 px-8 rounded-lg shadow-lg transition-transform duration-300 ease-in-out hover:scale-105 text-lg flex items-center" href="/profile">
            <span class="material-icons mr-2">person_add</span> Update Profile
        </a>
    </div>
 </div>


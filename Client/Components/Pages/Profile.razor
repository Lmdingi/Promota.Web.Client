@code {
    [Parameter]
    public string? userId { get; set; }

    UserModel? _authuser = new();
    UserModel _profile = new();

    private bool _isPopupVisible = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        try
        {
            if (firstRender)
            {
                _authuser = await _authStateProvider.GetCurrentUserState();

                if (string.IsNullOrWhiteSpace(userId))
                {
                    userId = _authuser.Id;
                }

                _profile = await _userService.GetUserProfileByUserIdAsync(userId);
            }
        }
        catch (InvalidOperationException ex)
        {
            _logger.LogError(ex, "API error in GetEvent");
        }
        catch (Exception ex)
        {
            _logger.LogError(ex, "Client logic error in GetEvent");
        }

        StateHasChanged();
    }

    private void TogglePopup(bool show = false)
    {
        _isPopupVisible = !_isPopupVisible;
    }
}

@rendermode InteractiveServer
   
<div class="mb-6">
    <div class="relative">
        <input class="w-full pl-4 pr-10 py-2 border border-gray-300 rounded-md focus:ring-pink-500 focus:border-pink-500" placeholder="Search promoter" type="text" />
        <span class="material-icons absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-400">search</span>
    </div>
</div>
<div class="mb-6 flex justify-between items-center">
    <div class="flex items-center">
        <span class="material-icons text-gray-600 mr-2">filter_list</span>
        <h3 class="text-lg font-semibold text-gray-700">Filters</h3>
    </div>
    <button class="text-sm text-pink-500 hover:text-pink-700 flex items-center">
        Clear Filter
        <span class="ml-1 bg-pink-100 text-pink-600 text-xs font-semibold px-2 py-0.5 rounded-full">3</span>
    </button>
</div>
<div class="space-y-4 text-gray-600">
    <div>
        <label class="flex items-center">
            <input class="form-checkbox h-5 w-5 text-pink-500 rounded border-gray-300 focus:ring-pink-500" type="checkbox" />
            <span class="ml-2">Online</span>
        </label>
    </div>
    <div>
        <label class="flex items-center">
            <input class="form-checkbox h-5 w-5 text-pink-500 rounded border-gray-300 focus:ring-pink-500" type="checkbox" />
            <span class="ml-2">In-Person</span>
        </label>
    </div>
    <div>
        <label class="flex items-center">
            <input class="form-checkbox h-5 w-5 text-pink-500 rounded border-gray-300 focus:ring-pink-500" type="checkbox" />
            <span class="ml-2">Free</span>
        </label>
    </div>
    <div>
        <label class="flex items-center">
            <input class="form-checkbox h-5 w-5 text-pink-500 rounded border-gray-300 focus:ring-pink-500" type="checkbox" />
            <span class="ml-2">One-time</span>
        </label>
    </div>
    <div>
        <label class="flex items-center">
            <input checked class="form-checkbox h-5 w-5 text-pink-500 rounded border-gray-300 focus:ring-pink-500" type="checkbox" />
            <span class="ml-2">Recurring</span>
        </label>
    </div>
    <div>
        <label class="flex items-center">
            <input checked class="form-checkbox h-5 w-5 text-pink-500 rounded border-gray-300 focus:ring-pink-500" type="checkbox" />
            <span class="ml-2">Distance in KM</span>
        </label>
        <select class="mt-2 w-full pl-3 pr-10 py-2 text-base border border-gray-300 focus:outline-none focus:ring-pink-500 focus:border-pink-500 sm:text-sm rounded-md">
            <option>10</option>
            <option selected>25</option>
            <option>50</option>
            <option>100</option>
        </select>
    </div>
    <div>
        <label class="flex items-center">
            <input class="form-checkbox h-5 w-5 text-pink-500 rounded border-gray-300 focus:ring-pink-500" type="checkbox" />
            <span class="ml-2">Following</span>
        </label>
    </div>
</div>
<button class="mt-8 w-full bg-pink-500 hover:bg-pink-600 text-white font-semibold py-3 px-4 rounded-md flex items-center justify-center">
    <span class="material-icons mr-2">tune</span>
    Apply Filter
</button>
